{
    "compilerOptions": {
        "target": "es5",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "plugins": [
            { "name": "typescript-plugin-css-modules" }
        ]
    },
    "include": [
        "src"
    ]
}